@{
}

@model List<string>
<form asp-controller="Heos" asp-action="Settings" method="post">
    <div>
        <h4>Enter HEOS Player IP-address</h4>
        <label>IP : </label>
        <input type="text" name="ip"/><br />
        <label>Description : </label>
        <input type="text" name="description"/><br />
        <input type="submit" value="Add IP"/>
    </div>
</form>

<div>
    <h4>Current HEOS Players IP-addresses</h4>
    <table>
        <tbody>
            @if(Model is not null && Model.Count != 0)
            {
                foreach(var ip in Model)
                {
                <tr>
                    <td class="text-value">@ip</td><td class="text-value"><a asp-controller="Heos" asp-action="RemoveIpFromList" asp-route-ip="@ip">Remove</a></td>
                </tr>
            }
            }
            else
            {
                <tr>
                    <td>No Players IPs entered</td>
                </tr>
            }
        </tbody>
    </table>
</div>

