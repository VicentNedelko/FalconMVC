@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model FalconMVC.ViewModels.InterfaceVM

<h4>Current Interface</h4>
<table>
    <tbody>
        <tr>
            <td>IP : </td>
            <td>@Model.Ip</td>
        </tr>
        <tr>
            <td>Name : </td>
            <td>@Model.FriendlyName</td>
        </tr>
    </tbody>
</table>

<br />

<h4>Available Interfaces</h4>
<table border="1" id="interfaceList">
    <thead>
        <tr>
            <th class="text-value">IP</th>
            <th class="text-value">Name</th>
            <th class="input-value">Choose</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.InterfaceList.Length != 0)
        {
            @foreach (var i in ViewBag.InterfaceList)
            {
                <tr>
                    <td style="text-align:center">@i.IpAddress</td>
                    <td style="text-align:center">@i.FriendlyName</td>
                    <td style="align-content:center"><input type="radio" name="chooseInterface" value="@i.IpAddress" /></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>Not found</td>
                <td>Not found</td>
                <td>Empty</td>
            </tr>
        }
    </tbody>
</table>
<br />

<br />
<form asp-controller="Interface" asp-action="Index" method="post">
    <h6>Selected Interface</h6><br />
    <table style="visibility:hidden" id="foundInterfaces" border="1">
        <tbody>
            <tr>
                <td class="text-value">IP :</td>
                <td id="selectedInterfaceIP" class="text-value"></td>
            </tr>
        </tbody>
    </table><br />
    <input name="ip" type="text" style="visibility:hidden" id="selectedIP" />
    <input type="submit" value="Select" hidden="hidden" />     @* check the value send to server *@


</form>

<script src="~/js/site.js"></script>


