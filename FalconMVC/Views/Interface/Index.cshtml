@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model FalconMVC.ViewModels.InterfaceVM

<h4>Current Interface</h4>
<table>
    <tbody>
        <tr>
            <td>IP : </td><td>@Model.Ip</td>
        </tr>
        <tr>
            <td>Name : </td><td>@Model.FriendlyName</td>
        </tr>
    </tbody>
</table>
<br />
<h4>Available Interfaces</h4>
<table>
    <thead>
        <tr>
            <th class="table-">IP</th><th style="width:120px; text-align:center">Name</th><th style="width:50px; align-content:center">Choose</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in ViewBag.InterfaceList)
        {
            <tr>
                <td style="text-align:center">@i.IpAddress</td><td style="text-align:center">@i.FriendlyName</td><td style="align-content:center"><input type="radio" name="chooseInterface"/></td>
            </tr>
        }
    </tbody>
</table>

